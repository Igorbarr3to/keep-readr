generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PDF {
  id        String    @id @default(cuid())
  title     String
  fileUrl   String
  progress  Progress?
  createdAt DateTime  @default(now())
}

model Progress {
  id        String   @id @default(cuid())
  pdf       PDF      @relation(fields: [pdfId], references: [id])
  pdfId     String   @unique
  page      Int
  updatedAt DateTime @updatedAt
}
